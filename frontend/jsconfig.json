{
    "compilerOptions": {
        "target": "es2022",
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./",
        "paths": {
            "@Components/*": ["src/components/*"],
            "@Helpers/*": ["src/helpers/*"],
            "@Hooks/*": ["src/hooks/*"],
            "@Icons/*": ["public/assets/icons/*"],
            "@Pictures/*": ["public/assets/pictures/*"],
            "@Services/*": ["src/services/*"],
            "@Styles/*": ["src/styles/*"],
            "@Utils/*": ["src/utils/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        ".next",
        ".storybook"
    ]
}