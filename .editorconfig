root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
insert_final_newline = true
charset = utf-8

[*.{js,jsx,ts,tsx,py}]
max_line_length = 90

[*.json]
insert_final_newline = ignore

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false
